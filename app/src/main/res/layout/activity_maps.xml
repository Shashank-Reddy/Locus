<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Relative Layout so that I can have two fragments inside a drawer-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#607D8B">
    <!-- Main content view-->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="300dp" android:id="@+id/map"
    tools:context="sara.locus.Map_Fragment"
    android:name="com.google.android.gms.maps.SupportMapFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Distance"
        android:id="@+id/Distance"
        android:textColor="#ffffff"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/map"
        android:padding="8dp"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Budget"
        android:id="@+id/Budget"
        android:textColor="#ffffff"
        android:layout_below="@+id/Distance"
        android:padding="8dp"

         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Head_Count"
        android:id="@+id/Head_Count"
        android:textColor="#ffffff"
        android:layout_below="@+id/Budget"
        android:padding="8dp"/>

    <EditText
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enterDistance"
        android:layout_above="@+id/enterBudget"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <EditText
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enterBudget"
        android:layout_below="@+id/Distance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <EditText
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enterHeadCount"
        android:layout_below="@+id/enterBudget"
        android:layout_alignLeft="@+id/enterBudget"
        android:layout_alignStart="@+id/enterBudget"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply Filters"
        android:id="@+id/filter_Button"
        android:layout_below="@+id/enterHeadCount"
        android:layout_centerHorizontal="true"
        android:onClick="sendToServer"/>

    <!--<fragment  xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:tools="http://schemas.android.com/tools"-->
        <!--android:id="@+id/filter_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_above="@+id/map">-->
    <!--</fragment>-->



</RelativeLayout>
    <!-- The navigation drawer -->
    <TableLayout android:id="@+id/left_drawer"
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#607D8B"
        tools:context="sara.locus.Drawer_Activity">
        <TableRow android:background="#3F51B5">
            <ImageView
                android:id="@+id/userPhotoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:paddingLeft="16dp"

         />
        </TableRow>
        <TableRow android:background="#3F51B5">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="@dimen/nav_header_vertical_spacing"
             android:textAppearance="@style/TextAppearance.AppCompat.Body1"
             android:id="@+id/NameTextView"
             android:paddingLeft="16dp"

             android:textColor="#ffffff"/>
        </TableRow>
        <TableRow android:background="#3F51B5">
            <TextView
                android:id="@+id/EmailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:textColor="#ffffff"
                />

        </TableRow>

        <TableRow android:paddingBottom="360dp">

        </TableRow>

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="LOG OUT"
            android:background="#B71C1C"
            android:id="@+id/logOutButton"
            android:layout_margin="5dp"
            android:drawableLeft="@android:drawable/ic_lock_power_off"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:onClick="logOut"/>
    </TableLayout>



</android.support.v4.widget.DrawerLayout>